<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Search</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="/add" class="btn btn-sm btn-outline-secondary">+ New Experiment</a>
        </div>
    </div>
</div>

<div class="table-responsive">
    <% if (experiments.length > 0) { %>

        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">Initials</th>
                    <th scope="col">Experiment ID</th>
                    <th scope="col">Grid Number</th>
                    <th scope="col">File Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% experiments.forEach(experiment => { %>
                    <tr class="align-middle">
                        <td><%= experiment.initials %></td>
                        <td><%= experiment.expID %></td>
                        <td><%= experiment.grid %></td>
                        <td><%= experiment.fileName %></td>
                        <td>

                            <div class="d-flex flex-row justify-content-end gap-2">

                                <a href="/view/<%= experiment._id %>" type="button" class="btn btn-primary btn-small">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <a href="/edit/<%= experiment._id %>" type="button" class="btn btn-warning btn-small">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <form action="/edit/<%= experiment._id %>?_method=DELETE" method="POST" class="position-relative">
                                    <button type="submit" class="btn btn-danger btn-small">
                                        <i class="bi bi-person-x"></i>
                                    </button>
                                </form>

                            </div>

                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

    <% } else { %>
        <h2>No results found.</h2>
    <% } %>

</div>
