<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Krios Data</h1>

    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary">?</button>
        </div>
    </div>
</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Krios Details</a></li>
                    <li class="breadcrumb-item active">New Data</li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>UserID</b>
        </div>
    </div>
</div>

<form action="/krios/add" method="POST">
    <input type="hidden" name="experimentId" value="<%= experimentId %>">

    <div class="row form-group mb-4">
        <div class="col">
            <label for="kriosDate">Krios Date</label>
            <input type="date" class="form-control" name="kriosDate" value="" placeholder="Krios Date" required>
        </div>

        <div class="col">
            <label for="kriosFileName">Krios File Name</label>
            <input type="text" class="form-control" name="kriosFileName" value="" placeholder="Krios File Name" required>
        </div>
    </div>

    <div class="form-group mb-4">
        <label for="kriosNotes">Krios Notes</label>
        <textarea class="form-control" name="kriosNotes" id="kriosNotes" cols="30" rows="12" placeholder="Krios Notes"></textarea>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Add Krios Details</button>
    </div>
</form>