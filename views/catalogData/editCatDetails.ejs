<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing Catalog Data</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary">?</button>
        </div>
    </div>
</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:history.back()">Dashboard</a></li>
                    <li class="breadcrumb-item active">Edit Catalog Data</li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>Catalog Data ID:</b> <%= element._id %>
        </div>
    </div>
</div>

<form action="/catalog/edit/<%= element._id %>?_method=PUT" method="POST">
    <input type="hidden" name="_id" value="<%= element._id %>">
    <div class="row form-group mb-4">
        <div class="col">
            <label for="tomogramFile">Tomogram File</label>
            <input type="text" class="form-control" name="tomogramFile" value="<%= element.tomogramFile %>" required>
        </div>
        <div class="col">
            <label for="residualError">Residual Error</label>
            <input type="text" class="form-control" name="residualError" value="<%= element.residualError %>">
        </div>
    </div>
    <div class="form-group mb-4">
        <label for="tomogramQuality">Tomogram Quality</label>
        <select class="form-select" name="tomogramQuality" required>
            <option value="Excellent" <%= element.tomogramQuality === 'Excellent' ? 'selected' : '' %>>Excellent</option>
            <option value="Good" <%= element.tomogramQuality === 'Good' ? 'selected' : '' %>>Good</option>
            <option value="Fair" <%= element.tomogramQuality === 'Fair' ? 'selected' : '' %>>Fair</option>
            <option value="Poor" <%= element.tomogramQuality === 'Poor' ? 'selected' : '' %>>Poor</option>
        </select>
    </div>
    <div class="form-group mb-4">
        <label for="clemResults">CLEM Results</label>
        <textarea class="form-control" name="clemResults" rows="4"><%= element.clemResults %></textarea>
    </div>
    <div class="form-group mb-4">
        <label>Observed Structures</label>
        <% ['Mitochondria', 'Mitochondria Constriction', 'Endoplasmic Reticulum', 'Microtubule', 'Septin', 'Ribosome', 'Actin', 'Other'].forEach(structure => { %>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="observedStructures" value="<%= structure %>" 
                    <%= element.observedStructures.includes(structure) ? 'checked' : '' %>>
                <label class="form-check-label"><%= structure %></label>
            </div>
        <% }) %>
    </div>
    <div class="form-group mb-4">
        <label for="otherStructures">Other Structures</label>
        <input type="text" class="form-control" name="otherStructures" value="<%= element.otherStructures %>">
    </div>
    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Update Catalog Data</button>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Catalog Data</button>
    </div>
</form>
<!-- for debugging-->
<script>
    console.log('Catalog ID:', '<%= element._id %>');
</script>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">You are about to remove a Catalog data record</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>This will remove the Catalog data record<br/>Are you sure?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form action="/catalog/delete/<%= element._id %>?_method=DELETE" method="POST" class="position-relative">
                    <button type="submit" class="btn btn-primary">Yes, Remove Catalog Data</button>
                </form>
            </div>
        </div>
    </div>
</div>