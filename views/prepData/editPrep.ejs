<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing: <%= samplePrep.cell_Genotype %></h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary">?</button>
        </div>
    </div>
</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active"><%= samplePrep.cell_Genotype %></li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>Sample ID:</b> <%= samplePrep._id %>
        </div>
    </div>
</div>

<form action="/edit-data/<%= samplePrep._id %>?_method=PUT" method="POST">
    <div class="row form-group mb-4">
        <div class="col">
            <label for="dateFrozen">Date Frozen</label>
            <input type="date" class="form-control" name="dateFrozen" value="<%= samplePrep.dateFrozen %>" required>
        </div>
        <div class="col">
            <label for="cell_Genotype">Cell Genotype</label>
            <input type="text" class="form-control" name="cell_Genotype" value="<%= samplePrep.cell_Genotype %>" placeholder="Cell Genotype" required>
        </div>
    </div>
    <div class="row form-group mb-4">
        <div class="col">
            <label for="treatment">Treatment</label>
            <input type="text" class="form-control" name="treatment" value="<%= samplePrep.treatment %>" placeholder="Treatment" required>
        </div>
        <div class="col">
            <label for="cell">Cell</label>
            <input type="text" class="form-control" name="cell" value="<%= samplePrep.cell %>" placeholder="Cell" required>
        </div>
    </div>
    <div class="row form-group mb-4">
        <div class="col">
            <label for="date_clipped">Date Clipped</label>
            <input type="date" class="form-control" name="date_clipped" value="<%= samplePrep.date_clipped %>" required>
        </div>
        <div class="col">
            <label for="boxPosition">Box Position</label>
            <input type="text" class="form-control" name="boxPosition" value="<%= samplePrep.boxPosition %>" placeholder="Box Position" required>
        </div>
    </div>
    <div class="form-group mb-4">
        <label for="details">Sample Preparation Details</label>
        <textarea class="form-control" name="details" id="details" cols="30" rows="12" placeholder="Sample Preparation Details"><%= samplePrep.details %></textarea>
    </div>
    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Update Sample Preparation</button>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Sample Preparation</button>
    </div>
</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">You are about to remove a sample preparation record</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>This will remove the sample preparation record<br/>Are you sure?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form action="/edit-data/delete/<%= samplePrep._id %>?_method=DELETE" method="POST" class="position-relative">
                    <button type="submit" class="btn btn-primary">Yes, Remove Sample Preparation</button>
                </form>
            </div>
        </div>
    </div>
</div>